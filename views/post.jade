block headContent
	link(rel="stylesheet" href="stylesheets/main.css")
	link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")

div.container
	div.row

					//- a(class="col s1 fa fa-heart hearts" ng-click="iLikeThisPostCommunity(post)")
		div(class="col s6 offset-s3")
			h3.galactic-green-text {{postData.title}}
			p.galactic-grey-text {{postData.dateCreated}}
			p.galactic-blue-text(ng-if="postData.time") {{postData.time}}

			p.galactic-grey-text {{postData.body}}
			a(href="https://{{postData.url}}" class="galactic-green-text") {{postData.url}}

			div.likesContainer
				div.number-div
					p(class="col s1 post-likes") {{postData.likes}}
				div.likes-div
					
			img(src="{{postData.userCreated.profilePic}}" alt="" class="circle")
			a(ng-href="#/profile/{{postData.userCreated.username}}" class="galactic-blue-text") {{postData.userCreated.profileName}}