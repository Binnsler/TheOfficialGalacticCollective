extends layout

block content
	div(class="container")
		div(class="row")
			form(class="col s6 offset-s3", method="POST", action="/login")
				h3 Sign In
				div(class="input-field col s12")
					input(placeholder="Username", name="username" class="validate")
					label(for="username") 
				div(class="input-field col s12")
					input(placeholder="Password", name="password", type="password", class="validate")
					label(for="signinPassword") 
				input(type="submit" value="Login")


		div(class="row")
			form(class="col s6 offset-s3", method="POST", action="/signup")
				h3 Sign Up
				div(class="input-field col s12")
					input(placeholder="Username (displayed as @username)", name="username", type="text", class="validate")
					label(for="name") 
				div(class="input-field col s12")
					input(placeholder="Email", name="email", type="email", class="validate")
					label(for="email") 					
				div(class="input-field col s12")
					input(placeholder="Password", name="password", type="password", class="validate")
					label(for="password") 
				input(type="submit" value="Sign Up")
