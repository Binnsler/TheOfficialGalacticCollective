div(class="container")
	div(class="row")
		form(class="col s6 offset-s3" ng-submit="login()")
			h3 Sign In
			div(class="input-field col s12")
				input(placeholder="Username", ng-model="loginFormData.username", type="text", class="validate")
				label(for="username") 
			div(class="input-field col s12")
				input(placeholder="Password", ng-model="loginFormData.password", type="password", class="validate")
				label(for="signinPassword") 
			input(type="submit" value="Login")


	div(class="row")
		form(class="col s6 offset-s3", ng-submit="signup()")
			h3 Sign Up
			div(class="input-field col s12")
				input(placeholder="Username (displayed as @username)", ng-model="signUpFormData.username", type="text", class="validate")
				label(for="name") 
			div(class="input-field col s12")
				input(placeholder="Email", ng-model="signUpFormData.email", type="email", class="validate")
				label(for="email") 					
			div(class="input-field col s12")
				input(placeholder="Password", ng-model="signUpFormData.password", type="password", class="validate")
				label(for="password") 
			input(type="submit" value="Sign Up")
