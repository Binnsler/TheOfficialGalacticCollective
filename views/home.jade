block headContent
	link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")
	link(rel="stylesheet" href="/client/stylesheets/home.css")

div.heroImage--Container
	div.smokescreen
		h3.heroImage--Slogan Helping Boulder's Creative/Freelance<br />Community Unite

div.partners--Container
	a(href="www.github.com")
		img(src="../images/refactoruLogo.png")
	a(href="github.com")
		img(src="../images/galvanizeLogo.png")
	a(href="github.com")
		img(src="../images/impacthubLogo.png")
	a(href="github.com")
		img(src="../images/sparkLogo.png")
	a(href="github.com")
		img(src="../images/bdaLogo.png")

div.row.tab--Container
	div(class="about--Tab col m3 col s12" id="home--Tab" ng-click="showAboutTab()")
		h5 About<br />Galactic
		p WTF is galactic Collective and why should you join? That is the question.
		span(class="glyphicon glyphicon-chevron-down")

	div(class="upcomingEvents--Tab col m3 col s12" id="home--Tab" ng-click="showEventsTab()")
		h5 Upcoming<br />Events
		p Go to these events. Grow your mothereffin network. Get more business!
		span(class="glyphicon glyphicon-chevron-down")

	div(class="recentJobs--Tab col m3 col s12" id="home--Tab" ng-click="showJobsTab()")
		h5 Recent<br />Job Posts
		p Our community is constantly posting up new gigs and jobs
		span(class="glyphicon glyphicon-chevron-down")

	div(class="resources--Tab col m3 col s12" id="home--Tab" ng-click="showResourcesTab()")
		h5 Freelance<br /> Resources
		p A collection of helpful resources for the resourceful freelancer
		span(class="glyphicon glyphicon-chevron-down")


//- open tabs
div.open--Tab.row(ng-show="aboutTab")
	div(class="col s12 col m6")
		h3.about-green We're here to help Boulder's freelance community Flourish

	div(class="col s12 col m6")
		p.about-green Galactic does everything in it's power to help freelancers and creatives<br />Meet more people<br />Get more gigs

div.open--Tab.row(ng-show="eventsTab")
	div(class="col s12 col m6")
		h3.events-green some text 

	div(class="col s12 col m6")
		p.events-green some way to show upcoming events


div.open--Tab.row(ng-show="jobsTab")
	div(class="col s12 col m6")
		h3.jobs-blue Some text 

	div(class="col s12 col m6")
		p.jobs-blue some way to show recent job posts

div.open--Tab.row(ng-show="resourcesTab")
	div(class="col s12 col m6")
		h3.resources-blue Some text 

	div(class="col s12 col m6")
		p.resources-blue static list of resources


div.callToAction--Container
	div(class="callToAction--Smokescreen")
		a(class="waves-effect pink waves-light btn-large") Join the Collective
	


